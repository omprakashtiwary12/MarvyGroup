<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="pdfData"
            type="com.zap.marvygroup.ui.documents_type.Record" />
    </data>

    <LinearLayout
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:backgroundTint="@color/dark_grey"
            android:layout_margin="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_9sdp"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_pdf"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        bind:layout_constraintTop_toTopOf="parent"
                        android:gravity="center"
                        bind:layout_constraintStart_toStartOf="parent"
                        bind:layout_constraintRight_toLeftOf="@+id/img"
                        android:scaleType="matrix"
                        android:textColor="@color/white"
                        android:text="Document Name" />

                <TextView
                    android:id="@+id/text_pdf_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="matrix"
                    android:text="Updated On :"
                    android:layout_marginRight="80dp"
                    android:textColor="@color/white"
                    bind:layout_constraintEnd_toEndOf="@+id/text_pdf"
                    bind:layout_constraintStart_toStartOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/text_pdf" />


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="28dp"
                    android:src="@drawable/ic__visibility"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintEnd_toEndOf="parent"
                    bind:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>