<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="30dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/peter"
        tools:srcCompat="@drawable/peter"
        android:layout_gravity="center"
        app:civ_border_color="#F0AE05"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/change_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Change Profile Image"
        android:fontFamily="@font/numans"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/sunflower_white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/headername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peter Jhonson"
        android:fontFamily="@font/numans"
        android:textColor="@color/sunflower_white"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/employee_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ff60"
        android:fontFamily="@font/numans"
        android:text="Employee Id : 9893245"
        />

</LinearLayout>