<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<!--        <variable-->
<!--            name="fragment"-->
<!--            type="com.zap.marvygroup.ui.attendance.AttendenceFragment" />-->
    <variable
        name="viewModel"
        type="com.zap.marvygroup.ui.attendance.AttendanceViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.attendance.AttendenceFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/empname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{viewModel.name}"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/aclonica"
                android:textColor="@color/blue_black_dark"
                android:textSize="20dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{viewModel.currentTime}"
                android:textColor="@color/blue_black_dark"
                android:textSize="14dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:layout_gravity="center|top"
                android:backgroundTint="@color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/btn_attendence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/time_in" />

                    <TextView
                        android:id="@+id/iconTextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:layout_margin="10dp"
                        style="@style/MatButton"
                        android:textSize="12dp"
                        android:text="Office Time In"
                        android:fontFamily="@font/aclonica"
                        android:textAllCaps="true"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/time_out" />

                    <TextView
                        android:id="@+id/iconTextButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:layout_margin="10dp"
                        style="@style/MatButton"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:text="Office Time Out"
                        android:textSize="12dp"
                        android:fontFamily="@font/aclonica"
                        android:textAllCaps="true" />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_address"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="wrap_content"
                        style="@style/MatButton"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/blue_black_dark"
                        android:text="@string/txt_val"
                        android:visibility="visible"
                        android:layout_gravity="left"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="wrap_content"
                        style="@style/SmallText"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/blue_black_dark"
                        android:visibility="visible"
                        android:layout_gravity="left"
                        android:gravity="left"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_address_out"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="wrap_content"
                        style="@style/MatButton"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:text="@string/txt_val"
                        android:visibility="visible"
                        android:layout_gravity="left"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/text_date_out"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="wrap_content"
                        style="@style/SmallText"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:visibility="visible"
                        android:layout_gravity="left"
                        android:gravity="left"/>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

    </FrameLayout>
</layout>