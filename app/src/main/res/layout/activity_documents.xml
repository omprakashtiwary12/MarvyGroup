<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.zap.marvygroup.ui.documents_type.DocViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.documents_type.Documents">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:elevation="@dimen/_10sdp"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:tooltipText="Add Documents"
                android:elevation="@dimen/_52sdp"
                app:navigationIcon="@drawable/ic_arrow_left"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_height="1dp" />



            <RelativeLayout
                android:id="@+id/relative_main"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/frmSaveAs"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:visibility="visible"
                        app:cardCornerRadius="5dp">

                        <Spinner
                            android:id="@+id/address_tag_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/landmark_input"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp" />

                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Edittext_OutlinedTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/street_input"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:hint="@string/save_as">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_save_as"
                            style="@style/SmallText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:editable="false"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/et_text_color"
                            android:textSize="@dimen/et_textsize" />

                    </com.google.android.material.textfield.TextInputLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linear_container"
                    style="@style/Edittext_OutlinedTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frmSaveAs"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/selct_text_view"
                        style="@style/SmallText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/button_rectangle_white"
                        android:text="Choose File"
                        android:textColor="@color/black_effective" />

                    <TextView
                        android:id="@+id/file_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/selct_text_view"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:fontFamily="@font/average_sans"
                        android:text="No File Selected" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_upload_doc"
                    android:layout_below="@+id/linear_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Upload"
                    android:textColor="@color/black_effective"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:backgroundTint="@color/white" />
                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:layout_below="@+id/btn_upload_doc"
                    android:id="@+id/itemsswipetorefresh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list_doc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layoutAnimation="@anim/layout_animation"
                    tools:listitem="@layout/pdf_item" />
                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/doc_progress_bar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    app:cpb_indeterminate_mode="true"
                    android:visibility="gone"
                    app:cpb_progress="0"
                    app:cpb_progress_max="100"
                    app:cpb_progressbar_color_start="#fff"
                    app:cpb_progressbar_color_end="#000"
                    app:cpb_background_progressbar_width="1dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="@color/colorAccent"
                    app:cpb_progressbar_width="1dp"
                    app:cpb_round_border="false" />

            </RelativeLayout>

    </RelativeLayout>
</layout>