<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.uploaded_documents.UploadedDocuments">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pdf_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/pdfprogress_bar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:cpb_indeterminate_mode="true"
            android:visibility="gone"
            app:cpb_progress="0"
            app:cpb_progress_max="100"
            app:cpb_progressbar_color_start="#fff"
            app:cpb_progressbar_color_end="#000"
            app:cpb_background_progressbar_width="1dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="@color/colorAccent"
            app:cpb_progressbar_width="1dp"
            app:cpb_round_border="false" />
    </FrameLayout>
</layout>